@model PublicTransportGallery.ViewModels.CommentInsertViewModels
@{
                int ValueId = (int)ViewData["ImageId"];
}

    <div class="form-group">
        @*@Html.LabelFor(model => model.ContentText, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.ContentText, new { htmlAttributes = new { @class = "form-control" } })*@
            @*<input type="text" id="ContentText" class="form-control" />*@
            <textarea rows="4" cols="50" id="ContentText" placeholder="Miejsce na komentarz"></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" onclick="AddCommentBtn()" value="Dodaj komentarz" class="btn btn-primary" />
        </div>
    </div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    function AddCommentBtn()
    {
        var getValueContentComment = document.getElementById("ContentText").value;
        $.ajax({
            type: "POST",
            url: '@Url.Action("AddComment", "Comment")',
            data: JSON.stringify({ getValueContentComment: getValueContentComment, ImageId: '@ValueId' }),
            contentType: "application/json; charset=utf-8",
            success: function () {
                bootoast.toast({
                    message: 'Komentarz został dodany',
                    type: 'success'
                });
                $("#ContentText").val('');
                console.log()
            },
            error: function () {
                bootoast.toast({
                    message: 'Komentarz nie został dodany prawidłowo',
                    type: 'danger'
                });
            }
        });
    };
</script>