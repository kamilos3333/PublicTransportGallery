@model IEnumerable<PublicTransportGallery.Data.Model.TblPassengerTransport>

<div class="list-group">
    @foreach (var item in Model)
    {

        <a href="@Url.Action("Details", "PassengerTransport", new { id = item.PassengerTransId })" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="row">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-2 h5">@item.Name</h5>
                </div>
                @*<small class="text-muted">Autor: @itemResult.users.UserName</small>*@
            </div>
        </a>
    }
</div>