@model PublicTransportGallery.ViewModels.DetailsUserViewModels
@using PublicTransportGallery.Helpers;
@{
    ViewBag.Title = "Moje zdjęcia";
}


<div class="card-columns">
    @foreach (var item in Model.ImagesList)
    {
        <div class="card">
            <img src="@Url.BusImgPath(item.Name)" class="card-img-top" alt="@item.Name">
            <div class="card-body">
                <p class="card-text"><a href="@Url.Action("EditImage","Image", new { id = item.ImageId })" class="btn btn-info">Edytuj</a> <a href="@Url.Action("DeleteImage","Image", new { id = item.ImageId })" id="deleteImage" onclick="return confirm('Czy na pewno chcesz usunąć?')" class="btn btn-danger">Usuń</a></p>
            </div>
        </div>
    }
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
<script src="~/Scripts/jquery.simpleLoadMore.js"></script>
<script>
    $('.card-columns').simpleLoadMore({
        item: 'div',
        count: 20,
        itemsToLoad: 20,
    });
</script>